<table id="leaderboard" class="table">
  <tbody>
    <h1>Leaderboard</h1>
    <% Company.lgbt_leaderboard.each do |company, index| %>
      <tr>
        <td class="company-name">
          <a href="companies/<%=company.id%>"><%=company.name %></a>
        </td>
        <td class="company-industry">
          <%=company.industry %></td>
        <td class="company-website">
          <a href="<%=company.website%>"><%=company.website %></a></td>
        <td class="company-rating">
          <div class="c100 p<%=index.round%> small">
              <span>	<%= company.open_index.round %>
              </span>
              <div class="slice">
                  <div class="bar"></div>
                  <div class="fill"></div>
              </div>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
