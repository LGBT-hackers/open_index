<%= form_for [@company, @review] do |f| %>
  <%= f.label :description %>
  <%= f.text_area :description %>
  <%= f.label "Would you feel comfortable disclosing your sexual orientation at work?" %>
  <%= f.radio_button :question_1, 2 %> Strongly Agree
  <%= f.radio_button :question_1, 1 %> Agree
  <%= f.radio_button :question_1, 0 %> Neither Agree Nor Disagree
  <%= f.radio_button :question_1, -1 %> Disagree
  <%= f.radio_button :question_1, -2 %> Strongly Disagree
  <%= f.label "Would you feel comfortable reporting harrassment based on sexual orientation?" %>
  <%= f.radio_button :question_2, 2 %> Strongly Agree
  <%= f.radio_button :question_2, 1 %> Agree
  <%= f.radio_button :question_2, 0 %> Neither Agree Nor Disagree
  <%= f.radio_button :question_2, -1 %> Disagree
  <%= f.radio_button :question_2, -2 %> Strongly Disagree
  <%= f.label "Do you feel sexual orientation does not create any barriers to your career progression?" %>
  <%= f.radio_button :question_3, 2 %> Strongly Agree
  <%= f.radio_button :question_3, 1 %> Agree
  <%= f.radio_button :question_3, 0 %> Neither Agree Nor Disagree
  <%= f.radio_button :question_3, -1 %> Disagree
  <%= f.radio_button :question_3, -2 %> Strongly Disagree
  <%= f.label "Is there a visible LGBT community in your workplace?" %>
  <%= f.radio_button :question_4, 2 %> Strongly Agree
  <%= f.radio_button :question_4, 1 %> Agree
  <%= f.radio_button :question_4, 0 %> Neither Agree Nor Disagree
  <%= f.radio_button :question_4, -1 %> Disagree
  <%= f.radio_button :question_4, -2 %> Strongly Disagree
  <%= f.label "Do senior managers demonstrate a visible commitment to the LGBT community" %>
  <%= f.radio_button :question_5, 2 %> Strongly Agree
  <%= f.radio_button :question_5, 1 %> Agree
  <%= f.radio_button :question_5, 0 %> Neither Agree Nor Disagree
  <%= f.radio_button :question_5, -1 %> Disagree
  <%= f.radio_button :question_5, -2 %> Strongly Disagree
  <%= f.label "Does your workplace have diversirty training to equip staff with knowledege on LGBT issues?" %>
  <%= f.radio_button :question_6, 2 %> Strongly Agree
  <%= f.radio_button :question_6, 1 %> Agree
  <%= f.radio_button :question_6, 0 %> Neither Agree Nor Disagree
  <%= f.radio_button :question_6, -1 %> Disagree
  <%= f.radio_button :question_6, -2 %> Strongly Disagree
  <%= f.submit 'Leave Review' %>
<% end %>
