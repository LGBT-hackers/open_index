<%= form_for [@company, @review] do |f| %>
  <%= f.label :description %>
  <%= f.text_area :description %>
  <%= f.label :question_1 %>
  <%= f.radio_button, @review, :question_1, "2" %> Strongly Agree
  <%= f.radio_button :question_1, "1" %> Agree
  <%= f.radio_button :question_1, "0" %> Neither Agree Nor Disagree
  <%= f.radio_button :question_1, "-1" %> Disagree
  <%= f.radio_button :question_1, "-2"%> Agree
  <%= f.label :question_2 %>
  <%= f.text_area :question_2 %>
  <%= f.label :question_3 %>
  <%= f.text_area :question_3 %>
  <%= f.label :question_4 %>
  <%= f.text_area :question_4 %>
  <%= f.label :question_5 %>
  <%= f.text_area :question_5 %>
  <%= f.label :question_6 %>
  <%= f.text_area :question_6 %>
  <%= f.submit 'Leave Review' %>
<% end %>
