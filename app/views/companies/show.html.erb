<div style="padding-top:25px;"></div> <!-- This line is ONLY for maaking space from the top! -->
<div class="container">
	<div class="row">
		<div class="col-xs-12 col-sm-6 col-md-12">
			<div class="well well-sm">
				<div class="row">
					<div class="col-sm-6 col-md-2">
						<img src="<%=@company.logoUrl%>" class="img-rounded img-responsive" draggable="false" />
					</div>
					<div class="col-sm-6 col-md-4">
						<h4><%=@company.name%></h4>
						<small>
							<cite><%=@company.industry%><i class="glyphicon glyphicon-map-marker"></i></cite>
						</small>
						<p>
							<i class="glyphicon glyphicon-globe"></i> <a href="<%=@company.website%>"><%=@company.website%></a> <br />
						</p>
					</div>
					<div class="col-sm-6 col-md-6">
						<h4>Open Index: <%= @company.open_index.round(2) %></h4>
					</div>
				</div>
			</div>
		</div>
    <% if @company.reviews.present? %>
      <% @company.reviews.each do |review| %>
        <div class="panel panel-primary">
          <div class="panel-body" >
            <p><%= review.description %></p>
          </div>
        </div>
      <% end %>
    <% end %>
    <%= button_to "Leave Review?", new_company_review_path(@company), class: "btn btn-primary" %>
	</div>
</div>
