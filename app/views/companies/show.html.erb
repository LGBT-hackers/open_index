<h1><%=@company.name%></h1>
<% if @company.industry != '' %><p>Industry: <%=@company.industry%></p><%end%>
<% if @company.website != '' %> <p>Website: <a href="<%=@company.website%>"><%=@company.website%></a></p> <%end%>
<%= link_to 'edit', edit_company_path(@company) %>
<%= link_to("delete", company_path(@company), method: :delete) %>

<%= link_to "Leave Review?", new_company_review_path(@company) %>

<%= @company.reviews.each do |review| %>
  <li>
    <%= review.description %>
    <%= review.average_review_rating %>
    <%= link_to "Edit Review", edit_company_review_path(@company, review) %>
    <%= link_to "delete Review", company_review_path(@company, review), method: :delete %>
  </li>
<% end %>

<% if @company.reviews.present? %>
  <h1>Open Index: <%= @company.open_index %></h1>
<% end %>
